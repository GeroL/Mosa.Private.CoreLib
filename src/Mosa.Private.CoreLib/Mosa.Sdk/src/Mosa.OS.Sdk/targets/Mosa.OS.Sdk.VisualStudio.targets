<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <MosaProjectExtensionsPath>$(MSBuildExtensionsPath)\Mosa\VisualStudio\</MosaProjectExtensionsPath>
  </PropertyGroup>

  <!-- Import Capability & Rules on Visual Studio -->
  <Import Project="$(MosaProjectExtensionsPath)Mosa.NET.ProjectType.targets" Condition="Exists('$(MosaProjectExtensionsPath)Mosa.NET.ProjectType.targets') and '$(BuildingInsideVisualStudio)' =='true' and '$(MosaCreateTpkOnBuild)' == 'true'" />

  <!-- Install Check 'Visual Studio for Mosa' for developing on Visual Studio -->
  <Target Name="MosaVsixInstallCheck" BeforeTargets="CompileDesignTime" Condition="'$(BuildingInsideVisualStudio)' =='true'" >
    <Warning Condition="!Exists('$(MosaProjectExtensionsPath)Mosa.NET.ProjectType.props')" Text="$(MosaProjectExtensionsPath)Mosa.NET.ProjectType.props is not exist.&#xA; you need to check if 'Visual Studio for Mosa' is installed" />
    <Warning Condition="!Exists('$(MosaProjectExtensionsPath)Mosa.NET.ProjectType.targets')" Text="$(MosaProjectExtensionsPath)Mosa.NET.ProjectType.targets is not exist.\&#xA; you need to check if 'Visual Studio for Mosa' is installed" />
  </Target>

</Project>
