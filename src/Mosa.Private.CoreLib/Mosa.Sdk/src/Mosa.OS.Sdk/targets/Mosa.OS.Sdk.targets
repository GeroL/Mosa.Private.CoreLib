<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<PropertyGroup>
		<AfterMicrosoftNETSdkTargets>$(AfterMicrosoftNETSdkTargets);$(MSBuildThisFileDirectory)Mosa.Sdk.After.targets</AfterMicrosoftNETSdkTargets>
	</PropertyGroup>

  <Import Project="Mosa.Sdk.Versions.targets" />
  <Import Project="Mosa.Sdk.DefaultProperties.targets" />

  <ItemGroup Condition=" '$(DisableImplicitFrameworkReferences)' != 'true' And '$(DisableImplicitMosaReferences)' != 'true' ">
    <FrameworkReference
        Include="Mosa"
        IsImplicitlyDefined="true"
        Pack="false"
        PrivateAssets="All"
    />
  </ItemGroup>

  <ItemGroup>
    <FrameworkReference Update="Microsoft.NETCore.App" RuntimePackLabels="Mosa" />
    <KnownRuntimePack Remove="Microsoft.NETCore.App" />
    <KnownRuntimePack Include="Mosa"
                      TargetFramework="net8.0"
                      RuntimeFrameworkName="Mosa"
                      LatestRuntimeFrameworkVersion="**FromWorkload**"
                      RuntimePackNamePatterns="Mosa.Runtime.**RID**"
                      RuntimePackRuntimeIdentifiers="mosa;mosa-arm;mosa-x86;mosa-x64"
                      RuntimePackLabels="Mosa"
                      />
  </ItemGroup>

</Project>
