<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <MosaApplication Condition=" '$(MosaApplication)' == '' And '$(OutputType)' == 'Exe' ">true</MosaApplication>
    <MosaApplication Condition=" '$(MosaApplication)' == '' ">false</MosaApplication>
    <EnableImplicitRuntimeIdentifiers Condition=" '$(EnableImplicitRuntimeIdentifiers)' == '' And '$(UseMaui)' == 'true' ">true</EnableImplicitRuntimeIdentifiers>
    <EnableImplicitRuntimeIdentifiers Condition=" '$(EnableImplicitRuntimeIdentifiers)' == '' ">false</EnableImplicitRuntimeIdentifiers>
    <!-- Set the default RuntimeIdentifier if not already specified. -->
    <RuntimeIdentifier Condition=" '$(EnableImplicitRuntimeIdentifiers)' == 'true' And '$(RuntimeIdentifier)' == '' And '$(RuntimeIdentifiers)' == '' ">mosa-x86</RuntimeIdentifier>
    <UseAppHost>false</UseAppHost>
    <_RuntimeIdentifierUsesAppHost>false</_RuntimeIdentifierUsesAppHost>
  </PropertyGroup>

  <PropertyGroup>
    <_IsMosaDefined>$([System.Text.RegularExpressions.Regex]::IsMatch('$(DefineConstants.Trim())', '(^|;)__MOSA__($|;)'))</_IsMosaDefined>
    <DefineConstants Condition="!$(_IsMosaDefined)">__MOSA__;$(DefineConstants)</DefineConstants>
  </PropertyGroup>

</Project>
